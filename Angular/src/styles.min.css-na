.form-container{width:50%;margin:10px auto !important}input,textarea,select{border-radius:5px !important;border:1px solid #999 !important}textarea{width:45%;height:50px}label{text-transform:capitalize}.form-label{padding-top:5px;font-weight:bold;display:block}.form-check-input{margin:0px;padding:0px}input[type=checkbox]+label,input[type=radio]+label{margin-right:6px !important;margin-left:3px !important}tr>th{color:#000 !important;background:#d5d8dc !important;border:#d5d8dc solid !important}table tr:hover{background:#fefed8 !important}tr:nth-child(even){background:#eaecee !important;color:#000 !important}tr:nth-child(odd){background:#fff !important;color:#000 !important}.debug-hidden{display:none !important}.debug-border,.debug-border *{border:1px dashed red !important}input[disabled]{cursor:not-allowed !important}